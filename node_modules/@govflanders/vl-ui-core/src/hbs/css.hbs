$icon-font-location: "/font/" !default;
$icon-family: "vlaanderen-icon";

// sass-lint:disable mixin-name-format max-file-line-count class-name-format
@include font-face($icon-family, $icon-font-location, $icon-family, normal, normal);

{{# each codepoints }}
// ### ICON: {{ @key }}
@mixin {{ ../classPrefix }}{{ @key }} {
  &::before {
    content: "\\{{ this }}";
  }
}

@mixin {{ ../classPrefix }}{{ @key }}-after {
  &::after {
    content: "\\{{ this }}";
  }
}

.vl-{{ ../classPrefix }}{{ @key }} {
  @include {{ ../classPrefix }}{{ @key }};
}

.vl-{{ ../classPrefix }}{{ @key }}--after {
  @include {{ ../classPrefix }}{{ @key }}-after;
}

{{/ each }}
