{
  "name": "webcomponenten-vl-ui",
  "version": "0.0.0",
  "description": "Webcomponenten demo",
  "main": "index.html",
  "author": "DIDM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponenten-vl-ui.git"
  },
  "homepage": "https://github.com/milieuinfo/webcomponenten-vl-ui#readme",
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  },
  "scripts": {
    "install": "npm run analyze && npm run doc",
    "analyze": "npm run analyze:copy && npm run analyze:prepare && npm run analyze:generate",
    "analyze:prepare": "npm run analyze:prepare:src && npm run analyze:prepare:demo",
    "analyze:prepare:src": "replace 'demo/' '../demo/' ./src/vl*.src.js",
    "analyze:prepare:demo": "replace '.src.js' '.js' ./demo/vl*.html",
    "analyze:copy": "npm run analyze:copy:webcomponent && npm run analyze:copy:demo",
    "analyze:copy:webcomponent": "copyfiles -f node_modules/**/vl-*.js ./src",
    "analyze:copy:demo": "copyfiles -f node_modules/**/demo/vl-*.html ./demo",
    "analyze:generate": "polymer analyze src/vl-*.src.js > analysis.json",
    "doc": "npm run doc:generate && npm run doc:commit",
    "doc:generate": "node_modules/jsdoc/jsdoc.js src/vl-*src.js README.md --destination doc",
    "doc:commit": "git add * && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo"
  },
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponenten-vl-ui/issues"
  },
  "devDependencies": {
    "copyfiles": "2.1.0",
    "replace": "1.0.0",
    "jsdoc": "3.5.5",
    "np": "3.0.4"
  },
  "dependencies": {
    "@polymer/iron-component-page": "4.0.1",
    "@polymer/iron-demo-helpers": "3.0.2",
    "vl-ui-alert": "1.0.1",
    "vl-ui-button": "1.0.1",
    "vl-ui-checkbox": "1.0.1",
    "vl-ui-icon": "1.0.1",
    "vl-ui-titles": "1.0.1",
    "vl-ui-core": "1.3.1"
  }
}
